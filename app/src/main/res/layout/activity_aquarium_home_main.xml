<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/aquarium_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/index_bottom"
        android:layout_alignParentTop="true"
        android:background="@color/white"></FrameLayout>

    <LinearLayout
        android:id="@+id/index_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#464543"
        android:paddingTop="@dimen/DIMEN_4DP">

        <RelativeLayout
            android:id="@+id/aquarium_device_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/aquarium_device_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/xiaoli_select"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/aquarium_device_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/aquarium_device"
                    android:textColor="@color/main_green" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/aquarium_shop_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/aquarium_shop_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shop_unselect"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/aquarium_shop_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/aquarium_shopping"
                    android:textColor="@color/main_black" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/aquarium_store_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/aquarium_store_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/store_unselect"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/aquarium_store_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/aquarium_store"
                    android:textColor="@color/main_black" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/aquarium_product_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/aquarium_product_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/product_unselect"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/aquarium_product_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/aquarium_product"
                    android:textColor="@color/main_black" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/aquarium_me_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/aquarium_me_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/me_new_unselect"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/aquarium_me_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/aquarium_me"
                    android:textColor="@color/main_black" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
