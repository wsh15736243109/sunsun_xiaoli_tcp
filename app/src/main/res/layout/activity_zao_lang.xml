<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="sunsun.xiaoli.jiarebang.device.shuibeng.ZaoLangActivity">

    <include layout="@layout/incude_titlebar"></include>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1DP"
        android:background="@color/gray_divider"></View>
    <RelativeLayout
        android:id="@+id/re_zaolang_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_1DP"
        android:visibility="visible"
        android:background="#EEEEEE"
        android:padding="@dimen/DIMEN_10DP">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_zaolang_status"
            android:gravity="center|left"
            android:text="@string/zaolang_switch"
            android:textSize="@dimen/DIMEN_18DP" />

        <ImageView
            android:id="@+id/iv_zaolang_status"
            android:layout_width="@dimen/DIMEN_55DP"
            android:layout_height="@dimen/DIMEN_27DP"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_10DP"
            android:background="@drawable/mytogglebutton"
            android:textColor="@color/main_green"
            android:textSize="@dimen/DIMEN_18DP" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1DP"
        android:background="@color/gray_divider"></View>
    <RelativeLayout
        android:id="@+id/re_zaolang_zhouqi_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_1DP"
        android:visibility="visible"
        android:background="#EEEEEE"
        android:padding="@dimen/DIMEN_10DP">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_zaolang_zhouqi"
            android:gravity="center|left"
            android:text="@string/zaolang_zhouqi"
            android:textSize="@dimen/DIMEN_18DP" />

        <TextView
            android:id="@+id/tv_zaolang_zhouqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text=""
            android:layout_marginRight="@dimen/DIMEN_10DP"
            android:textColor="@color/main_green"
            android:textSize="@dimen/DIMEN_18DP" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1DP"
        android:background="@color/gray_divider"></View>
    <RelativeLayout
        android:id="@+id/re_zaolang_liuliang_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_1DP"
        android:visibility="visible"
        android:background="#EEEEEE"
        android:padding="@dimen/DIMEN_10DP">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_zaolang_liuliang_gear"
            android:gravity="center|left"
            android:text="@string/liuliang_choose"
            android:textSize="@dimen/DIMEN_18DP" />

        <TextView
            android:id="@+id/tv_zaolang_liuliang_gear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text=""
            android:layout_marginRight="@dimen/DIMEN_10DP"
            android:textColor="@color/main_green"
            android:textSize="@dimen/DIMEN_18DP" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1DP"
        android:background="@color/gray_divider"></View>
</LinearLayout>
