<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <sunsun.xiaoli.jiarebang.sunsunlingshou.widget.TranslucentActionBar
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></sunsun.xiaoli.jiarebang.sunsunlingshou.widget.TranslucentActionBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/li_btn"
        android:layout_below="@+id/actionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/make_sure_header_order"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/DIMEN_10DP"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/DIMEN_5DP">

                    <TextView
                        android:id="@+id/txt_xuliehao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="序列号: " />

                    <EditText
                        android:id="@+id/ed_xuliehao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/border_gray"
                        android:padding="@dimen/DIMEN_10DP"
                        android:layout_toLeftOf="@+id/img_xlh_right"
                        android:layout_toRightOf="@+id/txt_xuliehao"
                        android:hint="" />

                    <ImageView
                        android:id="@+id/img_xlh_right"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="@dimen/margin_5"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/appoint_install_right" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/DIMEN_10DP">

                    <ImageView
                        android:id="@+id/img_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/ic_launcher_round" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/DIMEN_10DP"
                        android:layout_toRightOf="@+id/img_product">

                        <TextView
                            android:id="@+id/txt_product_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="" />

                        <TextView
                            android:id="@+id/txt_product_xinghao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_product_name"
                            android:layout_marginTop="@dimen/DIMEN_10DP"
                            android:text="" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/DIMEN_10DP"
                android:background="@color/white"
                android:orientation="vertical">


                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_10DP"
                    android:layout_marginRight="@dimen/DIMEN_10DP">

                    <TextView
                        android:id="@+id/txt_contactname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="联系人:" />

                    <EditText
                        android:id="@+id/edt_contactname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/DIMEN_10DP"
                        android:layout_marginTop="@dimen/DIMEN_10DP"
                        android:layout_toRightOf="@+id/txt_contactname"
                        android:background="@drawable/bg_gray"
                        android:hint="请输入联系人姓名"
                        android:padding="@dimen/DIMEN_10DP" />
                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_10DP"
                    android:layout_marginRight="@dimen/DIMEN_10DP">


                    <TextView
                        android:id="@+id/txt_contactnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="手机号:" />

                    <EditText
                        android:id="@+id/edt_contactnumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/DIMEN_10DP"
                        android:layout_marginTop="@dimen/DIMEN_10DP"
                        android:layout_toRightOf="@+id/txt_contactnumber"
                        android:background="@drawable/bg_gray"
                        android:hint="请输输入手机号码"
                        android:padding="@dimen/DIMEN_10DP" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_10DP"
                    android:layout_marginRight="@dimen/DIMEN_10DP">


                    <TextView
                        android:id="@+id/txt_contacttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/btn_contacttime"
                        android:layout_marginTop="@dimen/DIMEN_10DP"
                        android:text="时     间:" />

                    <Button
                        android:id="@+id/btn_contacttime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/DIMEN_10DP"
                        android:layout_marginTop="@dimen/DIMEN_10DP"
                        android:layout_toRightOf="@+id/txt_contacttime"
                        android:background="@drawable/bg_gray"
                        android:text="请选择预约时间"
                        android:padding="@dimen/DIMEN_10DP" />
                    <TextView
                        android:id="@+id/txt_addr"
                        android:layout_alignTop="@+id/txt_choosestore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/DIMEN_10DP"
                        android:text="地     址:" />
                    <Button
                        android:id="@+id/btn_store"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_contacttime"
                        android:layout_margin="@dimen/DIMEN_10DP"
                        android:layout_marginTop="@dimen/DIMEN_10DP"
                        android:layout_toRightOf="@+id/txt_contacttime"
                        android:background="@drawable/bg_gray"
                        android:text="选择附近所在商家"
                        android:drawableRight="@drawable/img_location_white"
                        android:padding="@dimen/DIMEN_10DP" />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:text="配送费"
                android:layout_marginLeft="@dimen/DIMEN_60DP"
                android:layout_width="wrap_content"
                android:layout_marginBottom="@dimen/DIMEN_10DP"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/li_btn"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_addshopcart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/main_yellow"
            android:text="加入购物车"
            android:gravity="center"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/btn_sure_order"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="@color/red500"
            android:text="确认订单"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>
