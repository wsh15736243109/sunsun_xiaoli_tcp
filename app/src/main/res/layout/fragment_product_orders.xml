<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:background="@drawable/tablayout_bg"
        android:id="@+id/order_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        android:layout_centerHorizontal="true"
        app:tabIndicatorColor="@color/main_yellow"
        app:tabSelectedTextColor="@color/main_yellow"
        app:tabTextColor="@drawable/sel_tab_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/order_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>