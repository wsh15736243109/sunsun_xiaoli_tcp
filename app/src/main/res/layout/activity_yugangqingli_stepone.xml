<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sunsun.xiaoli.jiarebang.sunsunlingshou.activity.home.AppointmentInstallStepOneActivity">

    <sunsun.xiaoli.jiarebang.sunsunlingshou.widget.TranslucentActionBar
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></sunsun.xiaoli.jiarebang.sunsunlingshou.widget.TranslucentActionBar>

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/re_type"
                android:layout_below="@+id/actionBar"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="wrap_content"
                    android:text="我是标题"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/DIMEN_20DP"
                    android:textColor="@color/main_yellow"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_below="@+id/actionBar"
                android:id="@+id/recyclerview_chicun"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DIMEN_40DP"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/DIMEN_20DP"
                android:background="@drawable/btn_border_blue_bg_blue"
                android:paddingBottom="@dimen/DIMEN_10DP"
                android:paddingLeft="@dimen/DIMEN_20DP"
                android:paddingRight="@dimen/DIMEN_20DP"
                android:paddingTop="@dimen/DIMEN_10DP"
                android:text="下一步"
                android:textColor="@color/white" />
</RelativeLayout>
