<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <include layout="@layout/incude_titlebar"></include>
<in.srain.cube.views.ptr.PtrFrameLayout
    android:id="@+id/ptr"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <sunsun.xiaoli.jiarebang.custom.XScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <sunsun.xiaoli.jiarebang.custom.LoweRelaLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg"
                android:gravity="center"
                android:orientation="vertical"
                app:ratio="1.8">

                <RelativeLayout
                    android:id="@+id/re_top"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/re_wendu"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/img_ph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/DIMEN_10DP"
                        android:background="@drawable/ph_icon" />

                    <TextView
                        android:id="@+id/txt_ph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/img_ph"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/img_ph"
                        android:layout_toRightOf="@+id/img_ph"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/DIMEN_48DP" />
                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/DIMEN_1DP"
                    android:layout_marginTop="@dimen/DIMEN_20DP"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:background="@color/white"></View>

                <RelativeLayout
                    android:id="@+id/re_wendu"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_10DP"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/re_top"
                >

                    <ImageView
                        android:id="@+id/icong_wendu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/DIMEN_10DP"
                        android:layout_centerVertical="true"
                        android:background="@drawable/wendu_white" />

                    <TextView
                        android:id="@+id/txt_wendu"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/icong_wendu"
                        android:text=""
                        android:layout_marginTop="@dimen/DIMEN_10DP"
                        android:textColor="@color/white"
                        android:textSize="@dimen/DIMEN_48DP" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </sunsun.xiaoli.jiarebang.custom.LoweRelaLayout>
            <RelativeLayout
                android:id="@+id/re_phbaojing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DCDCDC"
                android:padding="@dimen/DIMEN_10DP">

                <ImageView
                    android:id="@+id/icon_phbaojing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ph_shuzhi_baojing" />

                <TextView
                    android:id="@+id/txt_phbaojing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/DIMEN_5DP"
                    android:layout_toRightOf="@+id/icon_phbaojing"
                    android:text="@string/ph_baojing"
                    android:textSize="@dimen/DIMEN_20DP" />


                <ImageView
                    android:id="@+id/img_phbaojing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/DIMEN_10DP"
                    android:textColor="@color/text_yellow"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/re_phgaowei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_1DP"
                android:background="#EEEEEE"
                android:padding="@dimen/DIMEN_10DP">

                <ImageView
                    android:id="@+id/icon_zhaoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ph_gao" />

                <TextView
                    android:id="@+id/txt_zhaoming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/DIMEN_5DP"
                    android:layout_toRightOf="@+id/icon_zhaoming"
                    android:text="@string/ph_high"
                    android:textSize="@dimen/DIMEN_20DP" />


                <TextView
                    android:id="@+id/ph_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/DIMEN_10DP"
                    android:textColor="@color/text_yellow"
                    android:textSize="@dimen/DIMEN_20DP"
                    android:text=""
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_phdiwei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_1DP"
                android:background="#EEEEEE"
                android:padding="@dimen/DIMEN_10DP">

                <ImageView
                    android:id="@+id/icon_shajun_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ph_di" />

                <TextView
                    android:id="@+id/txt_shajun_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/DIMEN_5DP"
                    android:layout_toRightOf="@+id/icon_shajun_setting"
                    android:text="@string/ph_low"
                    android:textSize="@dimen/DIMEN_20DP" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/DIMEN_10DP"
                    android:id="@+id/ph_low"
                    android:textColor="@color/text_yellow"
                    android:textSize="@dimen/DIMEN_20DP"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_phzoushi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_1DP"
                android:background="#EEEEEE"
                android:padding="@dimen/DIMEN_10DP">

                <ImageView
                    android:id="@+id/icon_wendu_warn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ph_zoushi"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/txt_wendu_warn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_5DP"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/icon_wendu_warn"
                    android:text="@string/ph_history"
                    android:textSize="@dimen/DIMEN_20DP" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/DIMEN_10DP"
                    android:background="@drawable/icon_right" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/re_wendubaojing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_1DP"
                android:background="#DCDCDC"
                android:padding="@dimen/DIMEN_10DP">

                <ImageView
                    android:id="@+id/icon_wendubaojing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ph_wendu_baojing"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/txt_wendubaojing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_5DP"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/icon_wendubaojing"
                    android:text="@string/wendu_baojing"
                    android:textSize="@dimen/DIMEN_20DP" />

                <ImageView
                    android:id="@+id/img_wendubaojing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/DIMEN_10DP" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_gaowenshezhi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_1DP"
                android:background="#EEEEEE"
                android:padding="@dimen/DIMEN_10DP">

                <ImageView
                    android:id="@+id/icon_open_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ph_gaowen" />

                <TextView
                    android:id="@+id/txt_wendushezhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/DIMEN_5DP"
                    android:layout_toRightOf="@+id/icon_open_time"
                    android:text="@string/wendu_high"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/DIMEN_20DP" />

                <TextView
                    android:id="@+id/wendu_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/DIMEN_10DP"
                    android:textColor="@color/text_yellow"
                    android:textSize="@dimen/DIMEN_20DP"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_diwenshezhi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_1DP"
                android:background="#EEEEEE"
                android:padding="@dimen/DIMEN_10DP">

                <ImageView
                    android:id="@+id/icon_shipin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ph_diwen" />

                <TextView
                    android:id="@+id/txt_icon_shipin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_5DP"
                    android:layout_toRightOf="@+id/icon_shipin"
                    android:text="@string/wendu_low"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/DIMEN_20DP" />

                <TextView
                    android:id="@+id/wendu_di"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/DIMEN_10DP"
                    android:textColor="@color/text_yellow"
                    android:textSize="@dimen/DIMEN_20DP"
                    android:text="" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_shuiwenzoushi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_1DP"
                android:background="#EEEEEE"
                android:padding="@dimen/DIMEN_10DP">

                <ImageView
                    android:id="@+id/icon_suanjiandu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ph_shuiwenzoushi" />

                <TextView
                    android:id="@+id/txt_suanjiandu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_5DP"
                    android:layout_toRightOf="@+id/icon_suanjiandu"
                    android:text="@string/lishishuiwen"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/DIMEN_20DP" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/DIMEN_10DP"
                    android:background="@drawable/icon_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_dianjijiaozhun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_1DP"
                android:background="#EEEEEE"
                android:padding="@dimen/DIMEN_10DP">

                <ImageView
                    android:id="@+id/icon_shuiwei_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ph_dianji" />

                <TextView
                    android:id="@+id/txt_shuiwei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_5DP"
                    android:layout_toRightOf="@+id/icon_shuiwei_status"
                    android:text="@string/ph_jiaozhun"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/DIMEN_20DP" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/DIMEN_10DP"
                    android:background="@drawable/icon_right" />
            </RelativeLayout>

        </LinearLayout>
    </sunsun.xiaoli.jiarebang.custom.XScrollView>
</in.srain.cube.views.ptr.PtrFrameLayout>
</LinearLayout>