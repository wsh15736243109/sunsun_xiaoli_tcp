<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/incude_titlebar"></include>

    <sunsun.xiaoli.jiarebang.custom.XScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <sunsun.xiaoli.jiarebang.custom.LoweLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_wifi"
                app:ratio="1.07">

            </sunsun.xiaoli.jiarebang.custom.LoweLinearLayout>

            <RelativeLayout
                android:id="@+id/re_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/DIMEN_20DP"
                    android:layout_marginTop="@dimen/DIMEN_20DP"
                    android:drawableLeft="@mipmap/circle_green_peizhi"
                    android:gravity="center"
                    android:drawablePadding="@dimen/margin_5"
                    android:text="@string/search_device"
                    android:textSize="@dimen/DIMEN_16DP" />
                <!--<ProgressBar-->
                    <!--android:id="@+id/progress_search"-->
                    <!--style="@style/my_proceeebar"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:visibility="visible"-->
                    <!--android:layout_marginLeft="@dimen/DIMEN_5DP"-->
                    <!--android:layout_toRightOf="@+id/txt_search" />-->
                <ImageView
                    android:id="@+id/progress_search"
                    android:layout_width="@dimen/DIMEN_20DP"
                    android:layout_height="@dimen/DIMEN_20DP"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/DIMEN_5DP"
                    android:layout_toRightOf="@+id/txt_search" />
                <ImageView
                    android:id="@+id/img_finish_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/DIMEN_5DP"
                    android:layout_toRightOf="@+id/txt_search"
                    android:background="@drawable/finish" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_register"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/DIMEN_20DP"
                    android:drawablePadding="@dimen/margin_5"
                    android:drawableLeft="@mipmap/circle_green_peizhi"
                    android:text="@string/device_register"
                    android:gravity="center"
                    android:textSize="@dimen/DIMEN_16DP" />

                <!--<ProgressBar-->
                    <!--android:id="@+id/progress_register"-->
                    <!--style="@style/my_proceeebar"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:visibility="visible"-->
                    <!--android:layout_marginLeft="@dimen/DIMEN_5DP"-->
                    <!--android:layout_toRightOf="@+id/txt_register" />-->
                <ImageView
                    android:id="@+id/progress_register"
                    android:layout_width="@dimen/DIMEN_20DP"
                    android:layout_height="@dimen/DIMEN_20DP"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/DIMEN_5DP"
                    android:layout_toRightOf="@+id/txt_register" />

                <ImageView
                    android:id="@+id/img_finish_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/DIMEN_5DP"
                    android:layout_toRightOf="@+id/txt_register"
                    android:background="@drawable/finish" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_add"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/DIMEN_10DP"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_20DP"
                    android:drawablePadding="@dimen/margin_5"
                    android:drawableLeft="@mipmap/circle_green_peizhi"
                    android:text="@string/device_add"
                    android:gravity="center"
                    android:textSize="@dimen/DIMEN_16DP" />


                <!--<ProgressBar-->
                    <!--android:id="@+id/progress_add"-->
                    <!--style="@style/my_proceeebar"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:visibility="visible"-->
                    <!--android:layout_marginLeft="@dimen/DIMEN_5DP"-->
                    <!--android:layout_toRightOf="@+id/txt_add" />-->
                <ImageView
                    android:id="@+id/progress_add"
                    android:layout_width="@dimen/DIMEN_20DP"
                    android:layout_height="@dimen/DIMEN_20DP"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/DIMEN_5DP"
                    android:layout_toRightOf="@+id/txt_add" />

                <ImageView
                    android:id="@+id/img_finish_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/DIMEN_5DP"
                    android:layout_toRightOf="@+id/txt_add"
                    android:visibility="gone"
                    android:background="@drawable/finish" />
            </RelativeLayout>

            <TextView
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/DIMEN_20DP"
                android:layout_marginLeft="@dimen/DIMEN_20DP"
                android:layout_marginRight="@dimen/DIMEN_20DP"
                android:layout_marginTop="@dimen/DIMEN_20DP"
                android:background="@color/next"
                android:padding="@dimen/DIMEN_10DP"
                android:text="@string/next"
                android:textColor="@color/white" />
        </LinearLayout>
    </sunsun.xiaoli.jiarebang.custom.XScrollView>
</LinearLayout>