<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/re_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/DIMEN_10DP">

    <sunsun.xiaoli.jiarebang.custom.RatioImageView
        android:id="@+id/img_goods"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        app:ratio="1"
        android:background="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_goods"
        android:textColor="@color/red500"
        android:layout_alignLeft="@+id/img_goods"
        android:text="111" />

    <TextView
        android:id="@+id/txt_goodsname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_price"
        android:layout_alignLeft="@+id/img_goods"
        android:layout_toLeftOf="@+id/txt_tiyan"
        android:text="111" />

    <TextView
        android:id="@+id/txt_tiyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/img_goods"
        android:layout_below="@+id/txt_price"
        android:text="立即抢" />
</RelativeLayout>