<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_EEEE"
    android:orientation="vertical">

    <include layout="@layout/incude_titlebar"></include>

    <RelativeLayout
        android:id="@+id/realypoutTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12dp">

        <ImageView
            android:id="@+id/roundview"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:background="@color/gray_BBB"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/roundview"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/DIMEN_4DP"
            android:text="宝宝的盒子"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvaq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="0个智能设备"
            android:textSize="12dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/realypoutTop"
        android:background="@color/gray_EEEE" />

    <RelativeLayout
        android:id="@+id/mylocationrelaMessge"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/view1"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView_my_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_search" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imageView_my_message"
            android:text="@string/aquarium_my_message"
            android:textSize="14dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/mylocationrelaMessge"
            android:background="@color/gray_EEEE" />

    <RelativeLayout
        android:id="@+id/re_password_change"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/view4"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView_password_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_search" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imageView_password_change"
            android:text="@string/aquarium_password_change"
            android:textSize="14dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/re_password_change"
        android:background="@color/gray_EEEE" />

    <RelativeLayout
        android:id="@+id/mywordsrela"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/view5"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView_notifymessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_search" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imageView_notifymessage"
            android:text="@string/aquarium_notifymessage"
            android:textSize="14dp" />
    </RelativeLayout>

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/mywordsrela"
        android:background="@color/gray_EEEE" />

    <RelativeLayout
        android:id="@+id/personsettingrela"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/view6"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView_forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_search" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imageView_forum"
            android:text="@string/aquarium_forum"
            android:textSize="14dp" />
    </RelativeLayout>
    <View
        android:id="@+id/view7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/mywordsrela"
        android:background="@color/gray_EEEE" />

    <RelativeLayout
        android:id="@+id/re_about_xiaoli"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView_about_xiaoli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/home_search" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imageView_about_xiaoli"
            android:text="@string/aquarium_about_xiaoli"
            android:textSize="14dp" />
    </RelativeLayout>
</LinearLayout>
