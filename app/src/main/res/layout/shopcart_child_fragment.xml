    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_below="@+id/actionBar"
        android:layout_height="match_parent"
        android:layout_above="@+id/li_bottom">

    </android.support.v7.widget.RecyclerView>
