<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/DIMEN_20DP">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_border_dark">

        <TextView
            android:id="@+id/txt_contacttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_contacttime"
            android:layout_marginTop="@dimen/DIMEN_10DP"
            android:text="时     间:" />

        <Button
            android:id="@+id/btn_contacttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/DIMEN_10DP"
            android:layout_marginTop="@dimen/DIMEN_10DP"
            android:layout_toRightOf="@+id/txt_contacttime"
            android:background="@drawable/bg_gray"
            android:padding="@dimen/DIMEN_10DP"
            android:text="请选择预约时间" />

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_store"
            android:layout_marginTop="@dimen/DIMEN_10DP"
            android:text="地     址:" />

        <Button
            android:id="@+id/btn_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_contacttime"
            android:layout_margin="@dimen/DIMEN_10DP"
            android:layout_marginTop="@dimen/DIMEN_10DP"
            android:layout_toRightOf="@+id/txt_contacttime"
            android:background="@drawable/bg_gray"
            android:drawableRight="@drawable/img_location"
            android:padding="@dimen/DIMEN_10DP"
            android:text="选择附近所在商家" />
    </RelativeLayout>
</RelativeLayout>
