<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context="sunsun.xiaoli.jiarebang.device.led.TiaoGuangActivity">

    <include layout="@layout/incude_titlebar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_20DP"
        android:padding="@dimen/DIMEN_15DP">

        <ImageView
            android:id="@+id/img_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/tiaojie_white" />

        <SeekBar
            android:id="@+id/seek_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txt_white_progress"
            android:layout_toRightOf="@+id/img_white"
            android:max="100" />

        <TextView
            android:id="@+id/txt_white_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/DIMEN_15DP">

        <ImageView
            android:id="@+id/img_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/tiaojie_green" />

        <SeekBar
            android:id="@+id/seek_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_green_progress"
            android:layout_toRightOf="@+id/img_green"
            android:max="100" />

        <TextView
            android:id="@+id/txt_green_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/DIMEN_15DP">

        <ImageView
            android:id="@+id/img_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/tiaojie_red" />

        <SeekBar
            android:id="@+id/seek_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txt_red_progress"
            android:layout_toRightOf="@+id/img_red"
            android:max="100" />

        <TextView
            android:id="@+id/txt_red_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:visibility="gone"
        android:padding="@dimen/DIMEN_10DP">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/main_green" />
    </RelativeLayout>

    <LinearLayout
        android:background="@color/gray_divider"
        android:id="@+id/li_theme"
        android:visibility="gone"
        android:layout_marginTop="@dimen/DIMEN_20DP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/re_xitong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_1DP"
            android:background="@color/gray"
            android:padding="@dimen/DIMEN_10DP">

            <TextView
                android:id="@+id/txt_xitong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/tiaoguang_xitong"
                android:textColor="@color/main_green" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_1DP"
            android:background="@color/gray"
            android:padding="@dimen/DIMEN_10DP">

            <TextView
                android:id="@+id/txt_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/tiaoguang_red"
                android:textColor="@color/gray_color1" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_1DP"
            android:background="@color/gray"
            android:padding="@dimen/DIMEN_10DP">

            <TextView
                android:id="@+id/txt_lvse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/tiaoguang_green"
                android:textColor="@color/gray_color1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_zonghe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_1DP"
            android:background="@color/gray"
            android:padding="@dimen/DIMEN_10DP">

            <TextView
                android:id="@+id/txt_zonghe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/tiaoguang_zonghe"
                android:textColor="@color/gray_color1" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1DP"
            android:background="@color/gray_divider"
            ></View>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/li_btn"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/ok"
            android:padding="@dimen/DIMEN_10DP"
            android:textColor="@color/white"
            android:layout_margin="@dimen/DIMEN_30DP"
            android:background="@drawable/btn_border_green_bg_green"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:padding="@dimen/DIMEN_10DP"
            android:textColor="@color/colorSecondaryText"
            android:layout_margin="@dimen/DIMEN_30DP"
            android:background="@drawable/bg_gray_border_dark"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
