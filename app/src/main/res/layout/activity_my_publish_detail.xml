<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <sunsun.xiaoli.jiarebang.sunsunlingshou.widget.TranslucentScrollView
            android:id="@+id/pullzoom_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_update"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/publish_img"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_wifi"
                   />

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_10DP"
                    android:layout_marginTop="@dimen/DIMEN_20DP"
                     />

                <TextView
                        android:layout_marginLeft="@dimen/DIMEN_10DP"
                        android:layout_marginTop="@dimen/DIMEN_20DP"
                        android:id="@+id/txt_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         />
                <TextView
                    android:id="@+id/txt_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/DIMEN_10DP"
                    android:layout_marginTop="@dimen/DIMEN_20DP"
                    />
            </LinearLayout>

        </sunsun.xiaoli.jiarebang.sunsunlingshou.widget.TranslucentScrollView>

    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/blue500"
        android:text="@string/publish_update"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <sunsun.xiaoli.jiarebang.sunsunlingshou.widget.TranslucentActionBar
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ff00"></sunsun.xiaoli.jiarebang.sunsunlingshou.widget.TranslucentActionBar>
</RelativeLayout>
