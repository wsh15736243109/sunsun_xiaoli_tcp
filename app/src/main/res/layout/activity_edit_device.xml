<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdcdddd" >
    <include layout="@layout/incude_titlebar"></include>

    <View
        android:id="@+id/line1"
        android:layout_below="@+id/li_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1DP" android:background="@color/blue500"></View>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/DIMEN_1DP"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp" >

            <ImageView
                android:id="@+id/edit_device_imageView1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/edit_device_textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/edit_device_imageView1"
                android:layout_toEndOf="@+id/edit_device_imageView1"
                android:layout_toRightOf="@+id/edit_device_imageView1"
                android:paddingLeft="12dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF5F5D5D" />

            <TextView
                android:id="@+id/edit_device_textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/edit_device_imageView1"
                android:layout_toEndOf="@+id/edit_device_imageView1"
                android:layout_toRightOf="@+id/edit_device_imageView1"
                android:paddingLeft="12dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FF5F5D5D" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:background="#FFEEEEEF"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <TextView
                android:id="@+id/edit_device_textView3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/rename"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF5F5D5D" />

            <EditText
                android:id="@+id/edit_device_editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/edit_device_textView3"
                android:layout_toRightOf="@+id/edit_device_textView3"
                android:background="@null" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1px"
            android:background="#FFEEEEEF"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" >

            <TextView
                android:id="@+id/edit_device_textView4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/display_pass"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FF5F5D5D" />

            <EditText
                android:id="@+id/edit_device_editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/edit_device_textView4"
                android:layout_toRightOf="@+id/edit_device_textView4"
                android:background="@null"/>

            <CheckBox
                android:id="@+id/edit_device_checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal" >

            <!--<ImageView
                android:id="@+id/edit_device_imageView2"
                android:layout_width="176dp"
                android:layout_height="176dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="48dp"
                android:src="@drawable/bg_wm" />-->

            <Button
                android:id="@+id/edit_device_button1"
                android:layout_width="240dp"
                android:layout_height="42dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/bt_delete"
                android:text="@string/delete_device"
                android:textColor="#ffffffff" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>