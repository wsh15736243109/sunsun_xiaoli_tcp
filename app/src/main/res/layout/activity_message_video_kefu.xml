<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/incude_titlebar" />


    <LinearLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50DP"
        android:layout_below="@+id/top"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutMycollTiezi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linOne"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DIMEN_50DP"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/produceter_details" />

                <Button
                    android:id="@+id/btnTiezi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:text="@string/produceter_message"
                    android:textColor="@color/main_blue"
                    android:textSize="@dimen/DIMEN_12DP" />
            </LinearLayout>

            <View
                android:id="@+id/viewright"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/backgroundColor" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:background="@color/backgroundColor" />

        <LinearLayout
            android:id="@+id/layoutTieZiVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linTwo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgvideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/video" />

                <Button
                    android:id="@+id/btnTieziHuifu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:text="@string/produceter_video"
                    android:textSize="@dimen/DIMEN_12DP" />
            </LinearLayout>

            <View
                android:id="@+id/viewLeift"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/backgroundColor" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:background="@color/backgroundColor" />

        <LinearLayout
            android:id="@+id/layoutTieZiHkefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linThree"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgartificial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/artificial" />

                <Button
                    android:id="@+id/btnTiezikefu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:text="@string/produceter_rengong"
                    android:textSize="@dimen/DIMEN_12DP" />
            </LinearLayout>

            <View
                android:id="@+id/viewLeiftkefu"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/backgroundColor" />
        </LinearLayout>
    </LinearLayout>
    <!-- 内容部分， fragment切换 -->

        <LinearLayout
            android:id="@+id/content_layoutMycoll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_divider"
            android:orientation="vertical"></LinearLayout>
</LinearLayout>