<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <sunsun.xiaoli.jiarebang.sunsunlingshou.widget.TranslucentActionBar
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </sunsun.xiaoli.jiarebang.sunsunlingshou.widget.TranslucentActionBar>

    <RelativeLayout
        android:id="@+id/namerela"
        android:layout_below="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="50dp" 
        android:background="@color/white">

        <EditText
            android:id="@+id/nameedit"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:textColorHint="#838383"
            android:hint="姓名"/>

    </RelativeLayout>
    <View 
        android:id="@+id/view1"
        android:layout_below="@id/namerela"
        android:layout_width="match_parent"
        android:background="@color/gray_BBB"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/phonerela"
        android:layout_below="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <EditText
            android:id="@+id/phoneedit"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:inputType="number"
            android:maxLength="11"
            android:hint="电话"
            android:background="@null"/>

    </RelativeLayout>
    <View 
        android:id="@+id/view2"
        android:layout_below="@+id/phonerela"
        android:layout_width="match_parent"
        android:background="@color/gray_BBB"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/locationrela"
        android:layout_below="@id/view2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/provincetext"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textColor="#6A6A6A"
            android:text="省市区"
            android:gravity="center_vertical"
            android:textSize="16sp"
            />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_right_gray"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>
    <View 
        android:id="@+id/view3"
        android:layout_below="@+id/locationrela"
        android:layout_width="match_parent"
        android:background="@color/gray_BBB"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/morelocationrela"
        android:layout_below="@id/view3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <EditText
            android:id="@+id/detail"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@null"
            android:hint="详细地址"/>

    </RelativeLayout>
    <View 
        android:id="@+id/view4"
        android:layout_below="@+id/morelocationrela"
        android:layout_width="match_parent"
        android:background="@color/gray_BBB"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:id="@+id/youbianrela"
        android:layout_below="@id/view4"
        android:layout_width="match_parent"
        android:layout_height="50dp" 
        android:background="@color/white">

        <EditText
            android:id="@+id/zipcode"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:inputType="number"
            android:maxLength="6"
            android:background="@null"
            android:hint="邮编"/>

    </RelativeLayout>
    <View 
        android:id="@+id/view5"
        android:layout_below="@+id/youbianrela"
        android:layout_width="match_parent"
        android:background="@color/gray_BBB"
        android:layout_height="0.5dp"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存地址"
        android:textColor="@color/white"
        android:background="@color/main_yellow"
        android:layout_alignParentBottom="true"
        >

    </Button>

</RelativeLayout>