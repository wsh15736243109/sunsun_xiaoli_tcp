<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/camera_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_bg_shape"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvSttring"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="设置-报警"
                android:visibility="gone"
                android:textColor="#0884DC"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="#e4e4e4" />

            <TextView
                android:id="@+id/tvUpdate"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="@string/update_devicename"
                android:textColor="#0884DC"
                android:textSize="16dp" />

            <View
                android:id="@+id/udpatenickname_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#e4e4e4" />

            <TextView
                android:id="@+id/pick_upgrade"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="@string/update_shiji"
                android:textColor="#0884DC"
                android:textSize="16dp" />

            <View
                android:id="@+id/update_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#e4e4e4" />

            <TextView
                android:id="@+id/pick_Delete"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="@string/delete_device"
                android:textColor="#0884DC"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#e4e4e4" />

            <TextView
                android:id="@+id/pick_share"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="@string/share"
                android:visibility="gone"
                android:textColor="#0884DC"
                android:textSize="16dp" />

            <View
                android:id="@+id/share_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="#e4e4e4" />

            <TextView
                android:id="@+id/pick_feedback"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#ffffff"
                android:gravity="center"
                android:text="@string/feedback"
                android:textColor="#0884DC"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/camera_cancel"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_bg_shape"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#0884DC"
            android:textSize="16dp" />
    </LinearLayout>

</RelativeLayout>