<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <stroke android:width="@dimen/DIMEN_1DP" android:color="@color/gray"></stroke>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#D9DEDC"
                android:centerColor="#D9DEDC"
                android:centerY="0.75"
                android:endColor="#D9DEDC"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="@color/main_green"
                    android:centerColor="@color/main_green"
                    android:centerY="0.75"
                    android:endColor="@color/main_green"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="@color/main_green"
                    android:centerColor="@color/main_green"
                    android:centerY="0.75"
                    android:endColor="@color/main_green"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>