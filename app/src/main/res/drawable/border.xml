        android:top="3dp">

        <shape>
            <stroke
                android:width="@dimen/DIMEN_1DP"
                android:color="@color/red500"></stroke>
            <!--<solid android:color="@android:color/black" />-->
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
