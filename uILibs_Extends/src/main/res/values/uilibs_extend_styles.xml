<resources>    
    <style name="ImageViewerDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    
    <style name="loading_progressbar">
        <item name="android:indeterminateDrawable">@drawable/uik_loading_progress</item>
        <item name="android:indeterminateDuration">1000</item>
	　　	<item name="android:minWidth">76dip</item>
	　　	<item name="android:maxWidth">76dip</item>
	　　	<item name="android:minHeight">76dip</item>
	　　	<item name="android:maxHeight">76dip</item>       
    </style>  
    
      <style name="UIKit.Button.Normal" parent="@android:Widget.Button">
        <item name="android:background">@drawable/uikit_button_bg_normal</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">116dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@drawable/uikit_button_text_normal</item>
    </style>
    
        <style name="UIKit.EditText.Normal" parent="@android:Widget.EditText">
        <item name="android:background">@color/uikit_transparent</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#FF333333</item>
        <item name="android:textColorHint">#CCCCCC</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">64</item>
    </style>
    
</resources>
