<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/re_root"
    android:background="@color/white"
    android:layout_marginTop="@dimen/DIMEN_10DP"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_head"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/DIMEN_50DP"
        android:layout_margin="@dimen/DIMEN_10DP"
        android:layout_height="@dimen/DIMEN_50DP" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignTop="@+id/img_head"
        android:layout_alignBottom="@+id/img_head"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_head"
        android:layout_toLeftOf="@+id/img_news"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_nickname"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_18DP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_content"
            android:text=""
            android:layout_below="@+id/txt_nickname"
            android:singleLine="true"
            android:textSize="@dimen/DIMEN_16DP"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_time"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:textSize="@dimen/DIMEN_14DP"
            android:layout_below="@+id/txt_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_news"
        android:layout_margin="@dimen/DIMEN_10DP"
        android:background="@drawable/liuyanban_old"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
