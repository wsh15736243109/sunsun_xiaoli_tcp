<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:colorBackground"
    android:padding="@dimen/DIMEN_10DP">
        <TextView
            android:id="@+id/txt_weishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/DIMEN_1DP"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/periodname" />
        <TextView
            android:id="@+id/txt_weishi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/DIMEN_1DP"
            android:gravity="center"
            android:text=""
            android:textStyle="bold"
            android:minWidth="@dimen/DIMEN_20DP"
            android:minHeight="@dimen/DIMEN_20DP"
            android:textColor="@color/main_green" />
        <ImageView
            android:id="@+id/img_add_weishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/DIMEN_1DP"
            android:background="@drawable/add_small"
            android:gravity="center"
            android:visibility="gone"
            android:text="4"
            android:textColor="@color/main_green" />
</RelativeLayout>