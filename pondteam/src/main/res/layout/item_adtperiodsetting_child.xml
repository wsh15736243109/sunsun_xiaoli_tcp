<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/DIMEN_0DP"
            android:layout_height="wrap_content"
            android:background="@color/item_public_msg_content">

            <!--<com.itboye.pondteam.custom.MyCircleTextView-->
            <!--android:id="@+id/tv_content"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:gravity="center"-->
            <!--android:textSize="@dimen/DIMEN_18DP" />-->
        </RelativeLayout>


        <LinearLayout
            android:layout_width="@dimen/DIMEN_0DP"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/re_weishi_opentime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/DIMEN_1DP"
                android:layout_weight="1"
                android:background="@color/item_public_msg_content"
                android:padding="@dimen/DIMEN_10DP"
                android:paddingLeft="@dimen/DIMEN_5DP"
                android:paddingRight="@dimen/DIMEN_15DP">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/DIMEN_1DP"
                    android:layout_weight="1"
                    android:background="@color/item_public_msg_content"
                    android:gravity="center"
                    android:text="开启时间" />

                <TextView
                    android:id="@+id/txt_open_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/DIMEN_1DP"
                    android:layout_weight="1"
                    android:background="@color/item_public_msg_content"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/main_green" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_weishi_closetime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/DIMEN_1DP"
                android:layout_weight="1"
                android:background="@color/item_public_msg_content"
                android:padding="@dimen/DIMEN_10DP"
                android:paddingLeft="@dimen/DIMEN_5DP"
                android:paddingRight="@dimen/DIMEN_15DP">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/DIMEN_1DP"
                    android:layout_weight="1"
                    android:background="@color/item_public_msg_content"
                    android:gravity="center"
                    android:text="关闭时间" />

                <TextView
                    android:id="@+id/txt_close_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/DIMEN_1DP"
                    android:layout_weight="1"
                    android:background="@color/item_public_msg_content"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/main_green" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_tiaose"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/DIMEN_1DP"
                android:layout_weight="1"
                android:background="@color/item_public_msg_content"
                android:padding="@dimen/DIMEN_10DP"
                android:paddingLeft="@dimen/DIMEN_5DP"
                android:paddingRight="@dimen/DIMEN_15DP">

                <TextView
                    android:id="@+id/txt_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/DIMEN_1DP"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="灯光色温设置" />

                <ImageView
                    android:id="@+id/txt_zhouqi_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/DIMEN_1DP"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_right_gray" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>