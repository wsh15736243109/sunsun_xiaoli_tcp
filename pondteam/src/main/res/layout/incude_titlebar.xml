<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/li_title"
    android:minHeight="@dimen/DIMEN_40DP"
    android:background="#ffdcdddd"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:layout_marginLeft="@dimen/DIMEN_5DP"
            android:src="@drawable/back2" />
        <TextView
            android:id="@+id/txt_exist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/margin_5"
            android:layout_marginLeft="@dimen/DIMEN_5DP"
            android:text=""
            android:padding="5dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#148ECB"
                android:text=""
                android:layout_centerInParent="true"
                android:textSize="@dimen/include_title_size" />
            <TextView
                android:id="@+id/device_status"
                android:layout_width="wrap_content"
                android:text=""
                android:layout_marginTop="@dimen/DIMEN_8DP"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txt_title"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/loading"
                android:layout_below="@+id/txt_title"
                android:layout_marginTop="@dimen/DIMEN_3DP"
                android:layout_toRightOf="@+id/device_status"
                android:layout_width="10dp"
                android:layout_height="10dp" />
        </RelativeLayout>



        <ImageView
            android:id="@+id/img_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />
        <TextView
            android:id="@+id/txt_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>

</LinearLayout>